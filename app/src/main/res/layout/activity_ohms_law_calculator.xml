<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background"
    android:id="@+id/main"
    tools:context=".OhmsLawActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:id="@+id/current_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="current"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:id="@+id/resistance_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="res"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:id="@+id/volts_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="volt"
        android:id="@+id/textView3" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:id="@+id/select_layout">


    <ImageView
        android:id="@+id/ohmTriangle"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:src="@drawable/ohms_law"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/ohm_triangle_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/voltLabel"
        android:text="@string/voltage_label"
        android:textStyle="bold"
        android:textSize="45sp"
        android:typeface="serif"
        android:layout_alignTop="@+id/ohmTriangle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="124dp"
        android:textColor="#010101" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/res_label"
        android:id="@+id/resLabel"
        android:textStyle="bold"
        android:textSize="45sp"
        android:textColor="#010101"
        android:typeface="serif"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/voltLabel"
        android:layout_toStartOf="@+id/voltLabel"
        android:layout_marginEnd="7dp" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_label"
        android:id="@+id/currentLabel"
        android:textColor="#010101"
        android:textSize="45sp"
        android:textStyle="bold"
        android:typeface="serif"
            android:layout_marginStart="15dp"
            android:layout_alignTop="@+id/resLabel"
            android:layout_toEndOf="@+id/voltLabel" />
</RelativeLayout>
</RelativeLayout>